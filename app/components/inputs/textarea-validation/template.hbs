<TpkValidationTextarea
  @label={{@label}}
  @changeset={{@changeset}}
  @validationField={{@validationField}}
  @type={{@type}}
  class={{if @disabled "disabled"}}
  ...attributes
  as |TI|
>
  <TI.Label>
    {{@label}}
  </TI.Label>
  <TI.Input
    placeholder={{@placeholder}}
    class={{@inputClass}}
    disabled={{@disabled}}
    rows={{@rows}}
    aria-autocomplete="none"
    autocomplete="off"
    autofill="off"
  />
  <Inputs::ErrorValidation @errors={{TI.errors}} />
</TpkValidationTextarea>