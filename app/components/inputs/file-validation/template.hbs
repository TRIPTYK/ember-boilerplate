<TpkValidationFile
  @label={{@label}}
  @changeset={{@changeset}}
  @accept={{@accept}}
  @validationField={{@validationField}}
  @onChange={{this.onChange}}
  @multiple={{@multiple}}
  class={{if @disabled "disabled"}}
  ...attributes
  as |TI|
>
  <div>
    <TI.Label>
      {{@label}}
    </TI.Label>
    {{#if (not-eq @disabled true)}}
      <Inputs::File::InputLayout>
        <TI.Input
          placeholder={{@placeholder}}
          accept={{@accept}}
          multiple={{@multiple}}
          disabled={{@disabled}}
          class="{{@inputClass}}
            absolute opacity-0 w-full left-0 top-0 h-full hover:cursor-pointer hover:underline"
        />
      </Inputs::File::InputLayout>
    {{/if}}
  </div>
  <Inputs::ErrorValidation @errors={{TI.errors}} />
  <Inputs::ListFile
    @documents={{changeset-get @changeset @validationField}}
    @field={{@validationField}}
    @onRemove={{@onRemove}}
    @download={{@download}}
    @disabled={{@disabled}}
  />
</TpkValidationFile>