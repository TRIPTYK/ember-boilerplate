<TpkCheckbox
  @label={{@label}}
  @onChange={{@onChange}}
  @selected={{@selected}}
  @name={{@name}}
  @checked={{@value}}
  @type={{@type}}
  class={{if @disabled "disabled"}}
  ...attributes
  as |TI|
>
  <TI.Input
    placeholder={{@placeholder}}
    disabled={{@disabled}}
    class={{@inputClass}}
  />
  <TI.Label class={{@labelClass}}>
    {{@label}}
  </TI.Label>
  <Inputs::ErrorValidation @errors={{TI.errors}} />
</TpkCheckbox>