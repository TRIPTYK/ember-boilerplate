<div
  class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8"
  data-test-form-login
>
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <img
      class="mx-auto h-12 w-auto"
      src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg"
      alt="Workflow"
    />
    <h2 class="mt-6 text-center text-3xl font-extrabold text-primary">
      Login
    </h2>
  </div>
  <form
    class="space-y-6 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 mt-8 sm:mx-auto sm:w-full sm:max-w-md"
    {{on "submit" this.submit}}
  >
    <Ui::Input
      @label="Email"
      @name="email"
      @value={{changeset-get @changeset "email"}}
      @containerStyle=""
      @labelStyle="text-black font-semibold mb-2 block"
      @inputStyle="w-full outline-none transition-all duration-200 border-2 border-primary pt-1.5 pb-1.5 px-3 font-semibold text-text focus:outline-none focus:border-primary focus:ring-0"
      @updateValue={{fn this.changeInput "email"}}
      @placeholder="Email"
      type="text"
      data-test-input="email"
    />
    <Ui::Input
      @label="Password"
      @name="password"
      @value={{changeset-get @changeset "password"}}
      @containerStyle=""
      @labelStyle="text-black font-semibold mb-2 block"
      @inputStyle="w-full outline-none transition-all duration-200 border-2 border-primary pt-1.5 pb-1.5 px-3 font-semibold text-text focus:outline-none focus:border-primary focus:ring-0"
      @password={{true}}
      @mandatory={{true}}
      @passwordStyle="w-5 absolute h-full flex top-0 items-center right-4"
      @updateValue={{fn this.changeInput "password"}}
      @placeholder="Password"
      type="password"
      data-test-input="password"
    />
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <input
          id="remember-me"
          name="remember-me"
          type="checkbox"
          class="h-4 w-4 text-primary focus:ring-secondary border-secondary rounded"
        />
        <label for="remember-me" class="ml-2 block text-sm text-primary">
          Remember me
        </label>
      </div>
      <div class="text-sm">
        <a href="#" class="font-medium text-primary hover:text-secondary">
          Forgot your password?
        </a>
      </div>
    </div>
    <div>
      <button
        data-test-submit
        type="submit"
        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary"
      >
        Sign in
      </button>
    </div>
  </form>
</div>